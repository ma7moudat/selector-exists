{
  "name": "selector-exists",
  "version": "1.0.0",
  "description": "A node utility to check HTML markup for the existence of CSS selectors.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc -w",
    "format": "prettier --write \"src/**/*.(ts|js)\"",
    "lint": "tslint -p tsconfig.json",
    "test": "jest --config jestconfig.json",
    "prepare" : "npm run build",
    "prepublishOnly" : "npm test && npm run lint",
    "preversion" : "npm run lint",
    "version" : "npm run format && git add -A src",
    "postversion" : "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ma7moudat/selector-exists.git"
  },
  "keywords": ["css", "html", "selector", "cli"],
  "author": "Mahmoud Aldaas<@ma7moudat>",
  "license": "MIT License",
  "bugs": {
    "url": "https://github.com/ma7moudat/selector-exists/issues"
  },
  "homepage": "https://github.com/ma7moudat/selector-exists#readme",
  "files": [
    "lib/**/*"
  ],
  "bin": {
    "selector-exists": "./lib/cli.js"
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "css": "^3.0.0",
    "glob": "^7.1.6",
    "node-html-parser": "^1.3.1",
    "yargs": "^16.0.3"
  },
  "devDependencies": {
    "@types/css": "0.0.31",
    "@types/glob": "^7.1.3",
    "@types/jest": "^26.0.16",
    "@types/node": "^14.14.3",
    "@types/yargs": "^15.0.10",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.0.3"
  }
}
